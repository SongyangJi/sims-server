<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsy.simsserver.mapper.StudentMapper">

    <insert id="insertStudent" parameterType="Student">
        insert into student(sid,pwd,sname,gender,birth,profession,faculty,s_class,grade,phone,politics_status,address)
        values (#{sid},#{pwd},#{sname},#{gender},#{birth},#{profession},#{faculty},#{s_class},#{grade},#{phone},#{politics_status},#{address});
    </insert>

    <select id="selectAllStudents" resultType="Student">
        select * from student;
    </select>

    <select id="selectStudent" resultType="Student">
        select * from student where sid = #{sid};
    </select>


</mapper>