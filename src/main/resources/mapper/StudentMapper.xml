<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jsy.simsserver.mapper.StudentMapper">

    <insert id="insertStudent" parameterType="Student">
        INSERT INTO student(sid,pwd,sname,gender,birth,profession,faculty,s_class,grade,phone,politics_status,address,head_url)
        VALUES (#{sid},#{pwd},#{sname},#{gender},#{birth},#{profession},#{faculty},#{s_class},#{grade},#{phone},#{politics_status},#{address},#{head_url});
    </insert>

    <select id="selectAllStudents" resultType="Student">
        SELECT
             sid,
             sname,
             gender,
             birth,
             profession,
             faculty,
             s_class,
             grade,
             phone,
             politics_status,
             address,
             head_url
        FROM student;
    </select>

    <select id="selectStudent" resultType="Student">
        SELECT
             sid,
             sname,
             gender,
             birth,
             profession,
             faculty,
             s_class,
             grade,
             phone,
             politics_status,
             address,
             head_url
        FROM student WHERE sid = #{sid};
    </select>

    <select id="selectStudentByName" resultType="Student">
        SELECT
             sid,
             sname,
             gender,
             birth,
             profession,
             faculty,
             s_class,
             grade,
             phone,
             politics_status,
             address,
             head_url
        FROM student WHERE sname LIKE '%${name}%';
    </select>


    <delete id="deleteStudent">
        DELETE FROM student WHERE sid = #{sid};
    </delete>

    <update id="updateStudent">

        UPDATE student
            <set>
                <if test="sname!=null">
                    sname = #{sname},
                </if>
                <if test="gender!=null">
                    gender = #{gender},
                </if>
                <if test="birth!=null">
                    birth = #{birth},
                </if>
                <if test="profession!=null">
                    profession = #{profession},
                </if>
                <if test="faculty!=null">
                    faculty = #{faculty},
                </if>
                <if test="s_class!=null">
                    s_class = #{s_class},
                </if>
                <if test="grade!=null">
                    grade = #{grade},
                </if>
                <if test="phone!=null">
                    phone = #{phone},
                </if>
                <if test="politics_status!=null">
                    politics_status = #{politics_status},
                </if>
                <if test="address!=null">
                    address = #{address},
                </if>
                <if test="head_url!=null">
                    head_url = #{head_url},
                </if>
            </set>
        WHERE sid = #{sid};
    </update>


</mapper>